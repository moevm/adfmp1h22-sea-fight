<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Battleships" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_a50</item>
        <item name="colorPrimaryDark">@color/blue_a100</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="MenuButton">
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/akaya_kanadaka__regular</item>
        <item name="android:textColor">?colorOnPrimary</item>

        <item name="android:background">@drawable/menu_button</item>
        <item name="android:clickable">true</item>
    </style>
</resources>