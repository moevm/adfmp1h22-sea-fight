<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Battleships" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_a50</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_a100</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TextInput">
        <item name="android:fontFamily">@font/akaya_kanadaka__regular</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingHorizontal">9dp</item>
<!--        <item name="android:height">32sp</item>-->
    </style>
    
    <style name="TextButton">
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/akaya_kanadaka__regular</item>
        <item name="android:textColor">?colorOnPrimary</item>

        <item name="android:background">@drawable/text_button</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TableHeaderCell">
        <item name="android:textSize">26sp</item>
        <item name="android:height">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:fontFamily">@font/akaya_kanadaka__regular</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:background">@drawable/cell</item>
    </style>

    <style name="TableCell">
        <item name="android:textSize">22sp</item>
        <item name="android:height">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:fontFamily">@font/akaya_kanadaka__regular</item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:background">@drawable/cell</item>
    </style>
</resources>